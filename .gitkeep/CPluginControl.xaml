<UserControl x:Class="Galaxy_Swapper_v2.Workspace.Components.CPluginControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Galaxy_Swapper_v2.Workspace.Components"
             mc:Ignorable="d" 
             x:Name="root"
             Width="85"
             Height="85"
             MouseEnter="root_MouseEnter"
             MouseLeave="root_MouseLeave"
             >
    <Grid>
        <Image x:Name="Cosmetic" Source="{Binding Icon, ElementName=root}" Stretch="UniformToFill"/>
        <Image x:Name="Remove" Stretch="UniformToFill" Source="/Workspace/Assets/Remove.png" Width="13" Height="13" VerticalAlignment="Top" HorizontalAlignment="Right" Opacity="0" Margin="0, 0, -4, 0" MouseLeftButtonDown="Remove_MouseLeftButtonDown"/>
        <Image x:Name="Import" Stretch="UniformToFill" Source="/Workspace/Assets/ReImport.png" Width="13" Height="13" VerticalAlignment="Top" HorizontalAlignment="Right" Opacity="0" Margin="0, 22, -4, 0" MouseLeftButtonDown="ReImport_MouseLeftButtonDown"/>
    </Grid>
</UserControl>