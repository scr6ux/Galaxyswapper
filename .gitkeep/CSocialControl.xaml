<UserControl x:Class="Galaxy_Swapper_v2.Workspace.Components.CSocialControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Galaxy_Swapper_v2.Workspace.Components"
             mc:Ignorable="d" 
             x:Name="root"
             Width="25"
             Height="25"
             MouseEnter="root_MouseEnter"
             MouseLeave="root_MouseLeave"
             MouseLeftButtonDown="root_Click"
             Cursor="Hand"
             >
    <Grid>
        <Image x:Name="Logo" Stretch="Fill"/>
    </Grid>
</UserControl>